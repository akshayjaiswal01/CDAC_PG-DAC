#include<iostream>
using namespace std;
#include<string.h>
class Student
{
    public:
    int std_id;
    string std_name;
    int marks[5];
    Student(int marks[]);
};
Student :: Student(marks)
{
    cout<<"Enter Student Id: "<<endl;
    cin>> std_id;

    cout<<"Enter student name: "<<std_name<<endl;
    cin>> std_name;

    cout<<"Enter student marks: "<<endl;
    for(int i=0; i<5; i++)
    {
        cin>> marks[i];
    }
}
int main()
{
    int num;
    cout<<"Enter number of students"<<endl;
    cin>> num;

    Student std[num];
}